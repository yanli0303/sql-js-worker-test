{
  "root": true,
  "env": {
    "browser": true
  },
  "globals": {
    "M": true
  },
  "extends": [
    "airbnb",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "settings": {
    "react": {
      "version": "999.999.999"
    }
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "import/prefer-default-export": "off",
    "no-console": "off",
    "no-param-reassign": "off",
    "no-restricted-globals": "off",
    "object-curly-newline": [
      "error",
      {
        "minProperties": 4,
        "multiline": true
      }
    ],
    "semi": ["error", "always"]
  }
}
